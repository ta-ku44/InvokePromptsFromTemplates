{
  "manifest_version": 3,
  "name": "Invoke Prompts from Templates",
  "version": "1.0.0",
  "description": "",
  "permissions": ["storage"],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://perplexity.ai/*",
        "https://notion.so/*"
      ],
      "js": ["src/content/index.js"]
    }
  ],
  "options_page": "src/options/index.html",
  "action": {}
}